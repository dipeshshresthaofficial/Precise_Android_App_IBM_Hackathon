<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_stock2">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/health2"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="99dp"

            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingLeft="120dp"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center_horizontal"
                android:text="STOCK"
                android:textAlignment="center"
                android:textSize="40dp" />


            <Button
                android:id="@+id/add_data"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/custom_btn_round"
                android:fontFamily="sans-serif-black"
                android:text="ADD"
                android:textColor="@color/cardview_light_background"

                android:textSize="20dp" />
        </LinearLayout>


        <Button
            android:id="@+id/ppe"
            android:layout_width="227dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/cust_btn"
            android:fontFamily="sans-serif-black"
            android:text="@string/ppe"
            android:textColor="@color/cardview_light_background"
            android:textSize="20dp" />

        <Button
            android:id="@+id/faceMask"
            android:layout_width="227dp"
            android:layout_height="60dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/cust_btn"
            android:fontFamily="sans-serif-black"
            android:text="@string/face_mask"
            android:textColor="@color/cardview_light_background"
            android:textSize="20dp" />

        <Button
            android:id="@+id/faceSheild"
            android:layout_width="227dp"
            android:layout_height="60dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/cust_btn"
            android:fontFamily="sans-serif-black"
            android:text="@string/face_sheild"
            android:textColor="@color/cardview_light_background"
            android:textSize="20dp" />

        <Button
            android:id="@+id/addgloves"
            android:layout_width="227dp"
            android:layout_height="60dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/cust_btn"
            android:fontFamily="sans-serif-black"
            android:text="@string/gloves"
            android:textColor="@color/cardview_light_background"
            android:textSize="20dp" />

        <Button
            android:id="@+id/sanitizer"
            android:layout_width="227dp"
            android:layout_height="60dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/cust_btn"
            android:fontFamily="sans-serif-black"
            android:text="@string/sanitizer"
            android:textColor="@color/cardview_light_background"
            android:textSize="20dp" />


    </LinearLayout>



    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.02"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9"
        app:layout_constraintGuide_begin="20dp" />
</androidx.constraintlayout.widget.ConstraintLayout>